{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "extends": "google",
  "globals": {},
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, {
      "VariableDeclarator": 2,
      "SwitchCase": 1
    }],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "one-var": [
      2,
      "always"
    ],
    "object-curly-spacing": ["error", "always", {
      "objectsInObjects": false,
      "arraysInObjects": false
    }],
    "no-console": 0,
    "newline-after-var": ["error", "always"],
    "one-var": ["error", "never"],
    "max-len": ["error", 120]
  }
}
